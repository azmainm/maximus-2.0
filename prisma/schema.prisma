generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  age       Int
  sex       String
  height    Float
  weight    Float
  articles  Article[]
}

model Article {
  id      Int    @id @default(autoincrement())
  title   String
  tldr    String
  content String
  author  User   @relation(fields: [authorId], references: [id])
  authorId Int
  tags    String // Store as a comma-separated string
}

